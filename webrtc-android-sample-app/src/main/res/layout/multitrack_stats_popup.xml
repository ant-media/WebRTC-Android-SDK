                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Bytes Sent:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/multitrack_stats_popup_bytes_sent_audio_textview"
                            android:layout_marginLeft="2.5dp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Packets Sent Per Second:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/multitrack_stats_popup_packets_sent_per_second_audio_textview"
                            android:layout_marginLeft="2.5dp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

