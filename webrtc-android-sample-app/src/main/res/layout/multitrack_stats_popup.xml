        <Button
            android:layout_marginTop="5dp"
            android:text="Close"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/multitrack_stats_popup_play_stats_main_container"

            android:id="@+id/multitrack_stats_popup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

    </RelativeLayout>








