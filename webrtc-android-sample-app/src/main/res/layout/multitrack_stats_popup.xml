                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/multitrack_stats_popup_local_audio_bitrate_textview"
                            android:layout_marginLeft="2.5dp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

