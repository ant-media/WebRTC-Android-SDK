        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/multitrack_stats_popup_publish_stats_main_container"
            android:id="@+id/multitrack_stats_popup_play_stats_main_container"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/multitrack_stats_popup_play_stats_title_textview"
                android:text="Play Stats"
                android:textSize="16sp"

                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TextView>

            <RelativeLayout
                android:id="@+id/multitrack_stats_popup_play_stats_video_track_recyclerview_container"
                android:layout_below="@+id/multitrack_stats_popup_play_stats_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:id="@+id/multitrack_stats_popup_play_stats_video_track_stats_title"
                    android:text="Video Track Stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/multitrack_stats_popup_play_stats_video_track_recyclerview"
                    android:layout_below="@+id/multitrack_stats_popup_play_stats_video_track_stats_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>







            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/multitrack_stats_popup_play_stats_audio_track_recyclerview_container"
                android:layout_below="@+id/multitrack_stats_popup_play_stats_video_track_recyclerview_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:id="@+id/multitrack_stats_popup_play_stats_audio_track_stats_title"
                    android:text="Audio Track Stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:layout_below="@+id/multitrack_stats_popup_play_stats_audio_track_stats_title"
                    android:id="@+id/multitrack_stats_popup_play_stats_audio_track_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

